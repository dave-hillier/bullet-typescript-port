{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@physics/*": ["../src/*"],
      "@/*": ["../src/*"],
      "@examples/*": ["../examples/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "../src/**/*.ts"
  ]
}